<mycelia>
  <framerate>30</framerate>
  <osdColor>
    <r>0</r>
    <g>0</g>
    <b>0</b>
    <a>255</a>
  </osdColor>
  <canvas>
    <width>1280</width>
    <height>720</height>
    <shaderFilename>shaders/alphamask.frag</shaderFilename>
    <backgroundColor>
      <r>255</r>
      <g>255</g>
      <b>255</b>
    </backgroundColor>
  </canvas>
  <mycelium>
    <border>
      <distortion>0.7</distortion>
      <ratioRange>
        <min>1</min>
        <max>2</max>
      </ratioRange>
      <radiusRange>
        <min>400</min>
        <max>800</max>
      </radiusRange>
    </border>
    <hyphae>
      <creationAreaSize>10</creationAreaSize>
      <primalHyphaCount>100</primalHyphaCount>
      <newPrimalHyphaPeriod>0.02</newPrimalHyphaPeriod> <!--seconds-->
      <maxHyphaCount>20000</maxHyphaCount>
      <hypha>
        <color>
          <r>0</r>
          <g>0</g>
          <b>0</b>
          <a>10</a>
        </color>
        <speed>4</speed> <!--pixels/s-->
        <speedVariation>20</speedVariation> <!--%-->
        <maxForkAngle>10</maxForkAngle>
        <maxBendAngle>3</maxBendAngle>
        <radiusTolerance>10</radiusTolerance> <!--%-->
      </hypha>
    </hyphae>
  </mycelium>
</mycelia>
